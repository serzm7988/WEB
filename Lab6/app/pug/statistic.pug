	header
		link(rel="stylesheet", href="css/statistic.css")
		body()
			.header
				h1 Статистика
				+navigation(menu)
			.main
				.settings
					form.filters
						details
							summary 
								span Фильтры
							div
								span Название: 
								input(type="text")
							div 
								span Дата: 
								input(type="date")
							div 
								span Просмотры: от 
								input(type="number") 
								span до 
								input(type="number")
							div 
								span Лайки: от 
								input(type="number") 
								span до 
								input(type="number")
							div 
								span Формат:
								select
									option(value="none")
									option(value="video") Видео
									option(value="photo") Фото
							div 
								span Страна: 
								input(type="text")
							button Поиск
					form.schedule
						details
							summary График
							div.value
								h4 Значение по оси OX
								input(type="radio" name="OXValue" value="date") 
								span Дата
								input(type="radio" name="OXValue" value="country") 
								span Страна
								input(type="radio" name="OXValue" value="format") 
								span Формат
							div.result
								h4 Результат
								input(type="checkbox" name="result" value="max") 
								span Максимальное количество просмотров
								input(type="checkbox" name="result" value="min") 
								span Минимальное количество просмотров
							button Построить
					form.sorting
						details
							summary Сортировка
							each item in SortingNumber
								div
									span= item
									select 
										each value in SortingValues
											option
												span= value
									span по
									select
										each value in SortingChanges
											option
												span= value
							button Отсортировать
				table
					tr
						th Название
						th Дата
						th Просмотры
						th Лайки
						th Формат
						th Страна
					each item in TableElements
						tr
							td= item.name
							td= item.date
							td= item.views
							td= item.likes
							td= item.format
							td= item.country
			footer
					