@import url('https://fonts.googleapis.com/css2?family=Stalinist+One&display=swap');

navigation()
	.navigation
		display flex
		width 100%
		justify-content space-around

	.navigation a 
		font-size 1.3em
		flex-basis 20%
		display inline-block
		background rgb(255, 0, 221)
		padding 0.5%
		box-shadow 3px 4px 10px 1px rgba(255, 0, 221, 0.5)

	.navigation a:hover
		background-color rgb(204, 0, 177)

body
	display flex
	flex-direction column
	margin 0px
	background no-repeat top/100% url("../img/background.JPG")
	background-color #03000e
	color #f2bdef
	text-align center

.header
	display flex
	flex-direction column
	width 80%
	margin 50% auto 1%

navigation()

.settings
	display flex
	flex-direction column
	flex-basis 100%
	text-align left

table
	width 100%
	border 2px solid black
	box-shadow 3px 4px 10px 1px rgba(0, 0, 0, 0.5)

th
	border 2px solid black

tr, td
	border 1px solid black

td:hover
	box-shadow inset 3px 4px 10px 1px rgba(0, 0, 0, 0.5)

#first
	color rgb(255, 0, 102)

.main
	display flex
	flex-wrap wrap
	width 80%
	margin auto
	padding 1%
	background-color rgb(79, 6, 168)

.main 
	& .introduction
		display flex
		flex-direction row
		flex-basis 100%
		margin 1%

.introduction-picture
	display inline-block
	flex-basis 50%

.introduction-description
	flex-basis 50%
	text-align justify
	padding 1%

.main 
	& .list
		display flex
		flex-direction row
		flex-basis 100%
		margin 1%

.list-element
	display flex
	flex-direction column
	padding 1%
	border solid thin rgb(255, 0, 221)
	margin 0.3%

.list-element-picture
	flex-basis 100%

.list-element-name
	flex-basis 100%

.list-element-description
	flex-basis 100%
	text-align justify
	font-size 0.8vw

.footer
	display flex
	width 80%
	margin 0.5% auto 1%
	padding 0.5% 1%
	background-color rgb(79, 6, 168)
	text-align left
	justify-content space-between

h1
	font-size 5vw
	font-family 'Stalinist One', sans-serif
	text-shadow 3px 4px 10px rgba(255, 0, 221, 0.5)

img
	width 100%

a
	float right
	color inherit
	text-decoration none

a:hover
	text-decoration none
	color inherit

@media (max-width: 700px)
	.navigation
		flex-wrap wrap

	.navigation a
		flex-basis 40%
		margin 1%

	.main
		flex-direction column