<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title #{title}
		link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
		link(rel="stylesheet", href="css/main.css")

	body(background="img/background.JPG")
		div.header
			h1 Праздник каждый день!
			div.navigation
				each value, key in menu
						if active == key 
							a.active(href= value)= key
						else
							a(href= value)= key

		div.main
			div.introduction
					div.introduction-picture
						img(src= "img/IMG_20220521_202130.jpg")
					div.introduction-description
						h2= introduction.header
						p= introduction.text
						a(href="#") ... 

			div.list
				each item in listElements
					div.list-element
						div.list-element-picture
							img(src="img/" + item.image)
						div.list-element-name
							h3= item.date
							h3= item.name
						div.list-element-description
							p= item.text
							a(href="#") ...

		div.footer
			p &#169 Mихайлов С.О., Б9121-09.03.04 2023-2024
			a(href="#") &#9993 Контакты

		//- Scripts
		script(src="js/jquery-3.5.1.min.js")
		script(src="js/main.js")